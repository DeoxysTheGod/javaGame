package equipements.rings;

public class Ring {

	private String name;
	
	private int bonusHp   ;
	private int bonusAtk  ;
	private int bonusDef  ;
	private int bonusCc   ;
	private int bonusLuck ;
	
	private double dropRate;
	
	public Ring() {
		this.name = "Rien";
		
		this.bonusHp   = 0 ;
		this.bonusAtk  = 0 ;
		this.bonusDef  = 0 ;
		this.bonusCc   = 0 ;
		this.bonusLuck = 0 ;
		
		this.dropRate  = 0.0;
	}

	public String getName() {
		return name;
	}
	public int getBonusHp() {
		return bonusHp;
	}
	public int getBonusAtk() {
		return bonusAtk;
	}
	public int getBonusDef() {
		return bonusDef;
	}
	public int getBonusCc() {
		return bonusCc;
	}
	public int getBonusLuck() {
		return bonusLuck;
	}

	@Override
	public String toString() {
		return "-%s-%n".formatted(name);
	}	
}
