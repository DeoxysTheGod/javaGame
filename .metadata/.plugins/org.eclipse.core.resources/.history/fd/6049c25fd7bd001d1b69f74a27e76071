package inventory;

import equipements.*;

public class Inventory {
	
	private Stuff[] stuffs;
	private int size;
	private int nbItems;

	public Inventory() {
		this.size = 64;
		this.stuffs = new Stuff[size];
		this.nbItems = 0;
	}
	
	public Inventory(int size) {
		this.size = size;
		this.stuffs = new Stuff[size];
		this.nbItems = 0;
	}

	public String showStockage() {
		return "" + nbItems + "/" + size;
	}

	public String showItem(int index) {
		if (stuffs[index] == null)
			return "Out of range";
		return stuffs[index].toString();
	}

	public Inventory addItem(Stuff stuff) {
		if (nbItems >= size) {
			System.out.println("Inventory is full");
		}
		else {
			for (int i = 0; i < size; ++i) {
				if (stuffs[i] != null)
					continue;
				stuffs[i] = stuff;
				++nbItems;
				break;
			}
		}
		return this;
	}

	public String toString() {
		String str = "";
		for (int i = 0; i < size; ++i) {
			if (stuffs[i] == null)
				break;
			str += i + " - " + stuffs[i].getName();
			str += "\n";
		}
		return str;
	}
}
