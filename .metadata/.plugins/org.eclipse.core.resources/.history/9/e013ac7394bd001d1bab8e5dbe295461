package equipements;

public class LeatherHelmet extends Stuff {

	private String name;
	private int hp  ;
	private int def ;
	private int cc  ;
	
	private double dropRate;
	
	public LeatherHelmet() {
		super();
		this.name = "Casque en cuir";
		this.hp  = 10 ;
		this.def = 10 ;
		this.cc  =  1 ;
		this.dropRate = 20.0 ;
	}
	
	// Getter
	
	public String getName() {
		return name;
	}
	public int getHp() {
		return hp;
	}
	public int getDef() {
		return def;
	}
	public int getCc() {
		return cc;
	}

	// toString

	public String toString() {
		return "LeatherHelmet[name=%s, hp=%d, def=%d, cc=%d]".formatted(name, hp, def, cc);
	}
	
}
